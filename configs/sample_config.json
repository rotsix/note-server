{
  "databases": {
  	"users": {
  	  "host": "db",
  	  "port": 5432,
  	  "driver": "postgres",
  	  "user": "docker",
  	  "pass": "docker",
      "desc": "contains users' informations (account relative)",
      "tables": {
        "informations": {
          "desc": "stores users' accounts informations",
          "fields": {
            "id": {
              "type": "bigserial",
              "constraints": ["primary key"]
            },
            "username": {
              "type": "text",
              "constraints": ["not null unique"]
            },
            "password": {
              "type": "text",
              "constraints": ["not null"]
            }
          },
          "mock": {
            "test": {
              "username": "test",
              "password": "test"
            },
            "test1": {
              "username": "test1",
              "password": "test1"
            },
            "test2": {
              "username": "test2",
              "password": "test2"
            },
            "test3": {
              "username": "test3",
              "password": "test3"
            }
          }
        },
        "sessions": {
          "desc": "stores users' sessions",
          "fields": {
            "id": {
              "type": "bigserial",
              "constraints": ["primary key"]
            },
            "uid": {
              "type": "bigserial",
              "constraints": ["not null"]
            },
            "token": {
              "type": "text",
              "constraints": ["not null"]
            },
            "expiration": {
              "type": "timestamp without time zone",
              "constraints": ["not null"]
            },
            "last_seen": {
              "type": "timestamp without time zone",
              "constraints": ["not null"]
            }
          }
        }
      }
    }
  }
}
